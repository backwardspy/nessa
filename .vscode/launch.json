    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'nessa'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=nessa",
                    "--package=nessa"
                ],
                "filter": {
                    "name": "nessa",
                    "kind": "bin"
                }
            },
            "args": [
                "rom/snake.nes"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'nessa'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=nessa",
                    "--package=nessa"
                ],
                "filter": {
                    "name": "nessa",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'nessa-rom'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=nessa-rom"
                ],
                "filter": {
                    "name": "nessa-rom",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'nessa6502'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
